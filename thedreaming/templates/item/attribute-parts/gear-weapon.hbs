<div>
  {{! Weapon Tab }}
  <section
    class='tab attributes {{tab.cssClass}}'
    data-group='primary'
    data-tab='weaponTab'
  ></section>

  <section class="tab attributes" data-group="primary" data-tab="attributes">

  <div class="resource">
    <label class="resource-label">Name</label>
    <input type="text" name="data.name" value="{{data.name}}" />
  </div>

  <div class="grid grid-2col">
    <div class="resource">
      <label class="resource-label">Type</label>
      <input type="text" name="data.type" value="{{data.type}}" placeholder="e.g., melee, ranged" />
    </div>

    <div class="resource">
      <label class="resource-label">Range</label>
      <input type="text" name="data.range" value="{{data.range}}" placeholder="e.g., Close, Long" />
    </div>
  </div>

  <div class="resource">
    <label class="resource-label">Damage</label>
    <input type="text" name="data.damage" value="{{data.damage}}" placeholder="e.g., 1d6+2" />
  </div>

  <div class="resource">
    <label class="resource-label">Description / Special Rules</label>
    <textarea name="data.description" rows="4" placeholder="Describe the weapon, effects, traits, etc.">{{data.description}}</textarea>
  </div>

</section>









  

</div>
{{!-- This template is used to render the weapon tab of the item sheet. --}}
{{!-- It includes a textarea for user input. --}}
